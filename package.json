{
    "name": "aoc-2021",
    "version": "1.0.0",
    "description": "This is my try to solve some Advent of Code 2021 puzzles with TypeScript - to learn its basics.",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "test": "tsc -p tsconfig.module.json && ava",
        "start": "http-server -e js"
    },
    "devDependencies": {
        "@ava/typescript": "^2.0.0",
        "ava": "^3.15.0",
        "http-server": "^14.0.0",
        "typescript": "^4.5.0"
    },
    "ava": {
        "typescript": {
            "rewritePaths": {
                "src/": "build/"
            },
            "compile": false
        },
        "files": [
            "src/ts/*.spec.ts"
        ]
    }
}
